<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sample_url_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:textColor="@color/white"
            android:text="Sample"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_sample_share"
            android:gravity="end"
            android:src="@drawable/ic_detail_share"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_sample_copy"
            android:gravity="end"
            android:src="@drawable/ic_detail_copy"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_sample_download"
            android:gravity="end"
            android:src="@drawable/ic_detail_download"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <TextView
            android:id="@+id/tv_url_sample"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/larger_url_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:textColor="@color/white"
            android:text="Larger"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="4dp"
            android:id="@+id/iv_url_larger_share"
            android:gravity="end"
            android:src="@drawable/ic_detail_share"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_larger_copy"
            android:gravity="end"
            android:src="@drawable/ic_detail_copy"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_larger_download"
            android:gravity="end"
            android:src="@drawable/ic_detail_download"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <TextView
            android:id="@+id/tv_url_larger"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/origin_url_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:textColor="@color/white"
            android:text="Origin"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_origin_share"
            android:gravity="end"
            android:src="@drawable/ic_detail_share"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_origin_copy"
            android:gravity="end"
            android:src="@drawable/ic_detail_copy"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_url_origin_download"
            android:gravity="end"
            android:src="@drawable/ic_detail_download"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <TextView
            android:id="@+id/tv_url_origin"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
