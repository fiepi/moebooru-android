<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/posts_padding">

        <com.fiepi.moebooru.widget.AutoHeightImageView
            android:id="@+id/iv_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center|top"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:widthWeight="4"
            app:heightWeight="3"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_posts_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundDark"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/text_left_padding"
                    android:paddingTop="@dimen/text_padding"
                    android:textColor="@color/colorTextID" />

                <TextView
                    android:id="@+id/tv_posts_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundDark"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/text_left_padding"
                    android:paddingBottom="@dimen/text_padding"
                    android:textColor="@color/colorTextSize" />
        </LinearLayout>

</LinearLayout>